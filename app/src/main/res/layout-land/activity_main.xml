<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?android:attr/actionBarSize"
        android:id="@+id/toolBar"
        >

    </android.support.v7.widget.Toolbar>

    <TextView

        style="@style/CodeFont"
        android:text="@string/nanodegreeTitles"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"

        >
    <Button
        style="@style/ButtonStyle"
        android:text="@string/ProjectOne"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/streamBtn"
        android:layout_weight="0.3"
        android:layout_margin="2dp" />

    <Button
        style="@style/ButtonStyle"

        android:text="@string/ProjectTwo"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/scoresBtn"
        android:layout_weight="0.3"
        />

    <Button
        style="@style/ButtonStyle"

        android:text="@string/ProjectThree"
        android:id="@+id/libraryBtn"

        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.3"
        />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"

        >

    <Button
        style="@style/ButtonStyle"

        android:text="@string/ProjectFour"
        android:id="@+id/biggerBtn"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical|center_horizontal" />

    <Button
        style="@style/ButtonStyle"

        android:text="@string/ProjectFive"
        android:id="@+id/baconBtn"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical|center_horizontal" />




        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#e67e22"
        android:text="@string/CapstoneProject"
        android:id="@+id/captoneBtn"
        android:layout_gravity="center_vertical|center_horizontal" />

</LinearLayout>
