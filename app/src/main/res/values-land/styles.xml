<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">#9b59b6</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>


    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#e74c3c</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_margin">3dp</item>
    </style>


    <style name="CodeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
